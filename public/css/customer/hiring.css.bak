/* DevFoods Driver Hiring Landing Page Styles */

/* Basic styles */
.hiring-landing-container {
    font-family: 'Roboto', sans-serif;
    line-height: 1.6;
}

/* Hero Section */
.hero-banner {
    position: relative;
    padding: 100px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
    min-height: 600px;
    display: flex;
    align-items: center;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/food-delivery-bg.jpg') center/cover;
    opacity: 0.1;
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    min-height: 500px;
}

.hero-text {
    flex: 1;
    color: white;
    padding-right: 30px;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.hero-title span {
    color: #ffc107;
    display: block;
}

.hero-description {
    font-size: 1.3rem;
    margin-bottom: 40px;
    opacity: 0.9;
    line-height: 1.6;
}

.hero-buttons {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.hero-buttons .btn {
    padding: 15px 30px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 50px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.hero-buttons .btn-primary {
    background-color: #28a745;
    border: 2px solid #28a745;
    color: white;
}

.hero-buttons .btn-primary:hover {
    background-color: #218838;
    border-color: #218838;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
}

.hero-buttons .btn-outline {
    background-color: transparent;
    border: 2px solid white;
    color: white;
}

.hero-buttons .btn-outline:hover {
    background-color: white;
    color: #667eea;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
}

.hero-image {
    flex: 1;
    text-align: center;
}

.hero-image img {
    max-width: 100%;
    height: auto;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    transform: perspective(1000px) rotateY(-10deg);
    transition: transform 0.3s ease;
}

.hero-image img:hover {
    transform: perspective(1000px) rotateY(0deg);
}

.hero-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100px;
    background: linear-gradient(to bottom, transparent, rgba(255,255,255,0.1));
    z-index: 2;
}

/* Section Titles */
.section-title {
    text-align: center;
    margin-bottom: 60px;
}

.section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 15px;
    position: relative;
    display: inline-block;
}

.section-title h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(45deg, #667eea, #764ba2);
    border-radius: 2px;
}

.section-title p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
    font-weight: 500;
    letter-spacing: 0.5px;
}

/* Benefits Section */
.hiring-benefits {
    padding: 100px 0;
    background-color: #f8f9fa;
}

.benefit-card {
    padding: 40px 30px;
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    height: 100%;
    text-align: center;
    border: 1px solid #eee;
}

.benefit-card:hover {
    transform: translateY(-15px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: #667eea;
}

.benefit-icon {
    font-size: 3rem;
    color: #667eea;
    margin-bottom: 25px;
    transition: color 0.3s ease;
}

.benefit-card:hover .benefit-icon {
    color: #764ba2;
}

.benefit-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #2c3e50;
}

.benefit-description {
    color: #666;
    line-height: 1.7;
    font-size: 1rem;
}

/* Process Section */
.hiring-process {
    padding: 100px 0;
    background-color: #fff;
}

.timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(to bottom, #667eea, #764ba2);
    border-radius: 2px;
}

.timeline-item {
    display: flex;
    margin-bottom: 40px;
    position: relative;
}

.timeline-number {
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    margin-right: 30px;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
}

.timeline-content {
    background-color: #f8f9fa;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    flex-grow: 1;
    border-left: 4px solid #667eea;
    transition: all 0.3s ease;
}

.timeline-content:hover {
    transform: translateX(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.timeline-content h3 {
    color: #2c3e50;
    font-size: 1.3rem;
    margin-bottom: 15px;
    font-weight: 600;
}

.timeline-content p {
    color: #555;
    margin: 0;
    line-height: 1.6;
}

/* Requirements Section */
.hiring-requirements {
    padding: 100px 0;
    background-color: #f8f9fa;
}

.requirements-list {
    list-style: none;
    padding: 0;
}

.requirements-list li {
    font-size: 1.1rem;
    margin-bottom: 20px;
    color: #333;
    padding: 15px 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border-left: 4px solid #28a745;
}

.requirements-list li:hover {
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.requirements-list i {
    color: #28a745;
    margin-right: 15px;
    font-size: 1.2rem;
}

.documents-required {
    background-color: #fff;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    height: 100%;
}

.documents-required h3 {
    color: #2c3e50;
    font-size: 1.4rem;
    margin-bottom: 25px;
    font-weight: 600;
    border-bottom: 2px solid #667eea;
    padding-bottom: 10px;
}

.documents-required ul {
    list-style: none;
    padding: 0;
}

.documents-required ul li {
    font-size: 1.1rem;
    margin-bottom: 15px;
    color: #333;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.documents-required i {
    color: #667eea;
    margin-right: 15px;
    width: 20px;
}

/* FAQ Section */
.hiring-faq {
    padding: 100px 0;
    background-color: #fff;
}

.faq-container {
    max-width: 900px;
    margin: 0 auto;
}

.card {
    margin-bottom: 20px;
    border: none;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.card-header {
    background: linear-gradient(45deg, #f8f9fa, #fff);
    border: none;
    padding: 0;
}

.btn-link {
    color: #2c3e50;
    font-weight: 600;
    text-decoration: none;
    padding: 20px 25px;
    width: 100%;
    text-align: left;
    border: none;
    background: none;
    font-size: 1.1rem;
}

.btn-link:hover,
.btn-link:focus {
    text-decoration: none;
    color: #667eea;
    background-color: #f8f9fa;
}

.card-body {
    color: #555;
    line-height: 1.7;
    padding: 25px;
    background-color: #fff;
}

/* CTA Section */
.hiring-cta-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    text-align: center;
}

.cta-box {
    max-width: 700px;
    margin: 0 auto;
}

.cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: 700;
}

.cta-box p {
    font-size: 1.3rem;
    margin-bottom: 40px;
    opacity: 0.9;
}

.cta-box .btn-primary {
    background-color: #28a745;
    border-color: #28a745;
    padding: 15px 40px;
    font-weight: 600;
    border-radius: 50px;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
}

.cta-box .btn-primary:hover {
    background-color: #218838;
    border-color: #218838;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(40, 167, 69, 0.4);
}

/* Alert Styles */
.alert {
    border-radius: 10px;
    border: none;
    font-weight: 500;
    margin-bottom: 0;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .hero-title {
        font-size: 3rem;
    }
    
    .hero-description {
        font-size: 1.2rem;
    }
}

@media (max-width: 992px) {
    .hero-content {
        flex-direction: column;
        text-align: center;
    }
    
    .hero-text {
        padding-right: 0;
        margin-bottom: 40px;
    }
    
    .hero-title {
        font-size: 2.5rem;
    }
    
    .timeline::before {
        display: none;
    }
    
    .timeline-item {
        flex-direction: column;
        text-align: center;
    }
    
    .timeline-number {
        margin: 0 auto 20px auto;
    }
}

@media (max-width: 768px) {
    .hero-banner {
        padding: 60px 0;
        min-height: 500px;
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-description {
        font-size: 1.1rem;
    }
    
    .hero-buttons {
        justify-content: center;
    }
    
    .hero-buttons .btn {
        padding: 12px 25px;
        font-size: 1rem;
    }
    
    .hero-image img {
        transform: none;
        margin-top: 20px;
    }
    
    .section-title h2 {
        font-size: 2rem;
    }
    
    .hiring-benefits,
    .hiring-process,
    .hiring-requirements,
    .hiring-faq,
    .hiring-cta-section {
        padding: 60px 0;
    }
    
    .benefit-card {
        margin-bottom: 30px;
    }
    
    .timeline-content {
        padding: 20px;
    }
    
    .cta-box h2 {
        font-size: 2rem;
    }
    
    .cta-box p {
        font-size: 1.1rem;
    }
}

@media (max-width: 576px) {
    .hero-title {
        font-size: 1.8rem;
    }
    
    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .hero-buttons .btn {
        width: 100%;
        max-width: 300px;
    }
    
    .section-title h2 {
        font-size: 1.8rem;
    }
    
    .benefit-title {
        font-size: 1.2rem;
    }
    
    .timeline-content h3 {
        font-size: 1.1rem;
    }
}

/* Animation Classes */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out;
}

/* Utility Classes */
.text-gradient {
    background: linear-gradient(45deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.shadow-custom {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.border-gradient {
    border: 2px solid transparent;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(45deg, #667eea, #764ba2) border-box;
} 